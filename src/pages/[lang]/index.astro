---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import HeroSection from "../../sections/HeroSection.astro";
import AboutMeSection from "../../sections/AboutMeSection.astro";
import StudiesSection from "../../sections/StudiesSection.astro";
import Footer from "../../components/Footer.astro";
import { languages } from "../../i18n/ui.ts";

import "../../styles/global.css";

import type { GetStaticPaths } from "astro";
import BlogIntroSection from "../../sections/BlogIntroSection.astro";

export const getStaticPaths = (() => {
  let paths = [];

  for (const key of Object.keys(languages)) {
    paths.push({ params: { lang: key } });
  }
  return paths;
}) satisfies GetStaticPaths;
---

<Layout title="Alejandro Vidal - Portfolio">
  <div class="h-lvh flex flex-col">
    <Header showName={false} />
    <HeroSection />
  </div>
  <div class="container m-auto">
    <BlogIntroSection />
    <AboutMeSection />
    <StudiesSection />
  </div>
  <Footer />
</Layout>

<script>
  // cuando haces click, se genera un cuadrado debajo de tu cursor
  document.addEventListener("click", (e) => {
    const ripple = document.createElement("div");
    ripple.classList.add("ripple");
    ripple.style.left = `${e.pageX}px`;
    ripple.style.top = `${e.pageY}px`;

    document.body.appendChild(ripple);

    // Eliminar el elemento después de la animación
    ripple.addEventListener("animationend", () => {
      ripple.remove();
    });
  });
</script>
