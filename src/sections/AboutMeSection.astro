---
import SectionTitle from "../components/SectionTitle.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import TerminalWrapper from "../components/terminal/TerminalWrapper.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="about" class="py-24 overflow-hidden">
  
  <div class="container mx-auto px-4">
    
    <div class="mb-8 text-left">
      <SectionTitle>{t("about.title").replace(/ /g, "_")}</SectionTitle> 
      <p class="text-secondary text-lg max-w-2xl font-medium mt-8">
        {t("about.description")}
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
      
      <TerminalWrapper/>

      <div class="lg:col-span-5 flex flex-col gap-5 h-full justify-between">
        
        <div class="group p-5 rounded-xl border-2 border-secondary/40 bg-neutral-900/10 hover:bg-neutral-900/40 hover:border-primary/60 transition-all duration-300">
          <h3 class="text-lg font-bold text-primary mb-4 flex items-center">
            <span class="text-secondary">./</span> {t("about.frontend")}
          </h3>
          <div class="flex flex-wrap gap-2">
            {['React', 'Astro', 'NextJS', 'TypeScript', 'Tailwind', 'SASS'].map((tech) => (
              <span class="px-3 py-1 text-xs font-bold text-secondary bg-transparent border-2 border-secondary/40 rounded-md group-hover:text-primary group-hover:border-primary/80 transition-colors cursor-default">
                {tech}
              </span>
            ))}
          </div>
        </div>

        <div class="group p-5 rounded-xl border-2 border-secondary/40 bg-neutral-900/10 hover:bg-neutral-900/40 hover:border-primary/60 transition-all duration-300">
          <h3 class="text-lg font-bold text-primary mb-4 flex items-center">
            <span class="text-secondary">./</span> {t("about.backend")}
          </h3>
          <div class="flex flex-wrap gap-2">
            {['NodeJS', 'Express', 'NestJS', 'Laravel', 'SQL', 'MongoDB'].map((tech) => (
              <span class="px-3 py-1 text-xs font-bold text-secondary bg-transparent border-2 border-secondary/40 rounded-md group-hover:text-primary group-hover:border-primary/80 transition-colors cursor-default">
                {tech}
              </span>
            ))}
          </div>
        </div>

        <div class="group p-5 rounded-xl border-2 border-secondary/40 bg-neutral-900/10 hover:bg-neutral-900/40 hover:border-primary/60 transition-all duration-300">
          <h3 class="text-lg font-bold text-primary mb-4 flex items-center">
            <span class="text-secondary">./</span> {t("about.tools")}
          </h3>
          <div class="flex flex-wrap gap-2">
            {['Git', 'Docker', 'Linux', 'C++', 'Python'].map((tech) => (
              <span class="px-3 py-1 text-xs font-bold text-secondary bg-transparent border-2 border-secondary/40 rounded-md group-hover:text-primary group-hover:border-primary/80 transition-colors cursor-default">
                {tech}
              </span>
            ))}
          </div>
        </div>

      </div>
    </div>
  </div>
</section>